{% extends 'base.html.twig' %}

{% block title %}FICHE DU CONTACT{% endblock %}

{% block body %}
<h1 class="text-center pt-2">FICHE DU CONTACT</h1>

<div class="row">
            <div class="card mb-3 container">
                <h4 class="card-header">{{ leContact.nom}} {{leContact.prenom }}</h4>
                <div class="row">
                    <div class="col-2 d-fmlex align-items-center">
                        <img class="avatar mx-auto my-3" style="height: auto; max-width: 200px; display: block;" src=" {{leContact.avatar}}" alt="Card image">
                    </div>
                    <div class="col">
                        <ul class="list-group list-group-flush">
                        <li class="list-group-item">{{leContact.rue}}</li>
                        <li class="list-group-item">{{leContact.cp}}</li>
                        <li class="list-group-item">{{leContact.ville}}</li>
                        <li class="list-group-item">{{leContact.mail}}</li>
                        <li class="list-group-item">
                    {% if leContact.sexe==0 %}
                        <span class="badge badge-dark ">HOMME</span>
                    {% else %}
                        <span class="badge badge-dark ">FEMME</span>
                    {% endif %}
                            
                    </li>

                    <li class="list-group-item"> 
                        <a href=" {{path('ficheCategorie' , {'id': leContact.categorie.id})}}" > {{leContact.categorie.libelle}} </a> 
                    </li>

                </ul>
                    </div>
                </div>
            </div>
        </div>
        <a href="{{path('contacts')}}" class="btn bts-success btn-block text-center">Revenir a la liste </a>
</div>

{% endblock %}
